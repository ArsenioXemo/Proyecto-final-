<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" controller = "calcularDesc_noevasher">
	<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

<aura:attribute name ="descuento" type ="Double" />
<aura:attribute name ="myOpportunity" type ="Object" />


<div class="slds-box slds-theme_default">
        <lightning:card iconName="standard:account" title="Porcentaje Descuento" >
		<div class="slds-p-horizontal--small">
            Amount:<p><lightning:formattedNumber value="{!v.myOpportunity.Amount}"/></p>
            <div class="slds-size_1-of-2">
                <lightning:input aura:id="valuePorcentaje" type="number" label="Ingresa un Porcentaje de Descuento" formatter="percent-fixed" step="0.1" value="{!v.descuento}"/>
            </div>
            <lightning:buttonGroup>
		        <lightning:button label="Guardar" onclick="{!c.save}" />
	        </lightning:buttonGroup>
		</div>
	</lightning:card>
</div>
<div>

</div>
</aura:component>